{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "target": "ES6",                        // The target JavaScript version
    "lib": ["dom", "dom.iterable", "esnext"], // Libraries to include in the compilation
    "allowJs": true,                         // Allow JavaScript files to be compiled
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "esModuleInterop": true,                 // Enable ES module compatibility
    "allowSyntheticDefaultImports": true,    // Allow default imports from modules with no default export
    "strict": true,                          // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in module imports
    "module": "ESNext",                      // Module code generation
    "moduleResolution": "node",              // Resolve modules using Node.js resolution strategy
    "resolveJsonModule": true,               // Enable importing .json files
    "isolatedModules": true,                 // Ensure each file is treated as an isolated module
    "jsx": "react-jsx"                       // JSX support for React
  },
  "include": ["src/**/*", "global.d.ts"],                         // Include all files from the src directory
  "exclude": ["node_modules", "build"]        // Exclude node_modules and build directories
}